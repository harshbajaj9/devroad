{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "target": "ES2018",
    "plugins": [{ "name": "next" }],
    // baseUrl and paths to configure the @ default import
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
    // "declaration": false,
    // "declarationMap": false
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
